            <h:message class="porukaPogreske" for="lozinka"/>
            <h:commandButton id="gumbPrijave" value="Prijavi se" action="#{prijavaKorisnika.prijaviKorisnika()}"/>
            </h:panelGrid>
        </h:form>    
     
    </ui:define>

