<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE composition PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<ui:composition xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
                template="./predlozak.xhtml"
                xmlns:h="http://xmlns.jcp.org/jsf/html"
                xmlns:p="http://primefaces.org/ui"
                xmlns:f="http://xmlns.jcp.org/jsf/core">

    <ui:define name="naslov">
        #{p['dodavanjeAerodroma.naslov']}
    </ui:define>

    <ui:define name="content">
        <h:form>
            <h:panelGrid columns="3">
                <h:outputLabel>
                    #{p['dodavanjeAerodroma.naziv']}
                </h:outputLabel>
                <h:inputText value="#{dodavanjeAerodroma.naziv}" />
                <h:commandButton value="#{p['dodavanjeAerodroma.preuzmi']}" action="#{dodavanjeAerodroma.dajAerodromeNaziv()}"/>
                <h:outputLabel>
                    #{p['dodavanjeAerodroma.drzava']}
                </h:outputLabel>
                <h:inputText value="#{dodavanjeAerodroma.drzava}" />
                <h:commandButton value="#{p['dodavanjeAerodroma.preuzmiDrzava']}" 
                                 action="#{dodavanjeAerodroma.dajAerodromeDrzava()}"/>
            </h:panelGrid>
            <br/>
            <p:dataTable value="#{dodavanjeAerodroma.aerodromi}" var="a" rows="10"
                         paginator="true"
                         paginatorTemplate="{CurrentPageReport} {FirstPageLink}
                         {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink}
                         {RowsPerPageDropdown}"
                         rowsPerPageTemplate="5,10,15,30">
                <p:column>
                    <f:facet name="header">#{p['dodavanjeAerodroma.ICAO']}</f:facet>#{a.icao}
                </p:column>

                <p:column>
                    <f:facet name="header">#{p['dodavanjeAerodroma.nazivAerodroma']}</f:facet>#{a.naziv}
                </p:column>

                <p:column> <f:facet name="header">#{p['dodavanjeAerodroma.drzavaAerodroma']}</f:facet>#{a.drzava}</p:column>
                <p:column>
                    <p:commandButton value="#{p['dodavanjeAerodroma.dodajAerodrom']}" action="#{dodavanjeAerodroma.dodajAerodromKorisniku(a.icao)}"/>
                </p:column>
            </p:dataTable>
        </h:form>
    </ui:define>

</ui:composition>



